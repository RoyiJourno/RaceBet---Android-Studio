<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    app:layout_constraintRight_creator="@integer/google_play_services_version"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/nameListShow"
        android:layout_margin="10dp"
        android:text="Hai Dahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/scoreShow"
        android:layout_margin="10dp"
        android:text="10000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        />

    <View
        android:layout_below="@id/nameListShow"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#0D412C" />



</RelativeLayout>

